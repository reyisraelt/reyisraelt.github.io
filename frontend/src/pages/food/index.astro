---
import { useSanityClient } from "astro-sanity";

const posts = await useSanityClient().fetch(`*[_type == "post"]`);
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>(Not a) Food Review | Rey Tan</title>
  </head>
  <body class="mx-auto p-4 max-w-lg min-h-screen flex flex-col bg-white dark:bg-gray-900 text-gray-900 dark:text-white">
    <div class="mb-12 text-gray-500">
      <a href="/">&larr; Back to Home</a>
    </div>

    <div class="prose prose-slate dark:prose-invert">
      <h1>(Not a) Food Review</h1>
      {
        posts && (
          <ul>
            {posts.map((post) => (
              <li>
                <a href={`food/${post.slug?.current}`}>{post.title}</a>
              </li>
            ))}
          </ul>
        )
      }
    </div>
  </body>
</html>
